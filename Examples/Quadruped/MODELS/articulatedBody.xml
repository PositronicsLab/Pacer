<XML>
  <DRIVER>
    <camera position="0.35 -0.55 0.5" target="0 0 0" up="0 0 1" />
    <window location="0 0" size="640 480" />
  </DRIVER>

  <MOBY>
    <!-- multiple servo rigid bodies -->
    <RungeKuttaIntegrator id="rk4" />

    <GravityForce id="gravity" accel="0 0 -9.81" />

    <EventDrivenSimulator integrator-id="rk4" max-event-time="inf">
      <RecurrentForce recurrent-force-id="gravity" />
      <DisabledPair object1-id="leg" object2-id="leg"/>
      <DynamicBody dynamic-body-id="leg" />
      <DynamicBody dynamic-body-id="ground" />
      <ContactParameters object1-id="leg" object2-id="ground" mu-coulomb="0.1" mu-viscous="0" epsilon="0.0"/>
    </EventDrivenSimulator>

    <!-- the ROBOT [R. LINKS] "LYNX" -->
    <Box id="lleg" xlen="0.01" ylen="0.01" zlen="0.2" mass="0.4"/>
    <Sphere id="foot" radius="0.02" mass="0.1" points="1"/>

    <RCArticulatedBody id="leg" floating-base="true" fdyn-algorithm="crb"
      fdyn-algorithm-frame="link" rotate="0.0 0.0 0.0" translate="0,0,0.02" >
      <RigidBody id="LLEG" position="0 0 0.12" angular-velocity="0 0 0" linear-velocity="0.1 0 0" visualization-id="lleg">
        <CollisionGeometry primitive-id="lleg" />
        <InertiaFromPrimitive primitive-id="lleg" />
      </RigidBody>

<RevoluteJoint id="ANKLE" qd="0" location="0 0 0.02" inboard-link-id="LLEG" outboard-link-id="FOOT" axis="0 1 0"/>
      <RigidBody id="FOOT" position="0 0 0" angular-velocity="0 0 0" linear-velocity="0 0 0" visualization-id="foot" compliant="false">
        <CollisionGeometry primitive-id="foot" />
        <InertiaFromPrimitive primitive-id="foot" />
      </RigidBody>
    </RCArticulatedBody>

     <Box id="ground-primitive-viz" rpy="0 -0.0 0"  xlen="10" ylen="10" zlen="0.001" />
     <Plane id="ground-primitive" rpy="1.5708 0 0" />
  <RigidBody id="ground" enabled="false"
  position="0 0 -0.0" visualization-id="ground-primitive-viz" compliant="false">
    <CollisionGeometry primitive-id="ground-primitive" />
  </RigidBody>
  </MOBY>
</XML>
